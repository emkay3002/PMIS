<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="397.0" prefWidth="607.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.backup.Controller">
    <children>
        <Pane prefHeight="83.0" prefWidth="607.0" style="-fx-background-color: #101D42;">
            <children>
                <Label layoutX="25.0" layoutY="25.0" text="Welcome to Prison MIS" textFill="WHITE">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
                <Hyperlink fx:id="aboutLink" layoutX="411.0" layoutY="30.0" text="About" onAction="#handleAboutLinkClick" />
                <Hyperlink fx:id="contactLink" layoutX="460.0" layoutY="30.0" text="Contact Us" onAction="#handleContactLinkClick" />
                <Hyperlink fx:id="helpLink" layoutX="535.0" layoutY="31.0" text="Help" onAction="#handleHelpLinkClick" />
                <ImageView fitHeight="91.0" fitWidth="98.0" layoutX="290.0" layoutY="-4.0" pickOnBounds="true" preserveRatio="true" />
            </children></Pane>
        <GridPane hgap="10.0" layoutX="44.0" layoutY="112.0" prefHeight="253.0" prefWidth="511.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Transport Button with Action Method Attached -->
                <Button fx:id="transportButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleTransportButtonClick" prefHeight="79.0" prefWidth="164.0" text="Transport Coordination" />

                <!-- Facility Maintenance Button -->
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#handleFacilityMaintenanceButtonClick" prefHeight="120.0" prefWidth="220.0" text="Facility Maintenance" GridPane.columnIndex="1" />

                <!-- Community Service Button -->
                <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleCommunityServiceButtonClick" prefHeight="97.0" prefWidth="164.0" text="Community Service" GridPane.columnIndex="2" />

                <!-- Other Buttons -->
                <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="98.0" prefWidth="202.0" text="Inmate Profiling" GridPane.rowIndex="1" />
                <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="110.0" prefWidth="217.0" text="Surveys and Feedback" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="104.0" prefWidth="205.0" text="Incident Reporting" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button mnemonicParsing="false" prefHeight="101.0" prefWidth="218.0" text="Button" GridPane.rowIndex="2" />
                <Button mnemonicParsing="false" prefHeight="144.0" prefWidth="257.0" text="Button" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button mnemonicParsing="false" prefHeight="124.0" prefWidth="228.0" text="Button" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
